{
  "name": "@programinglive/zettly-editor",
  "version": "0.2.11",
  "description": "Shadcn-based WYSIWYG editor for Zettly todo and notes applications.",
  "keywords": [
    "tiptap",
    "wysiwyg",
    "editor",
    "react",
    "shadcn",
    "zettly"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/programinglive/zettly-editor.git"
  },
  "homepage": "https://zettly-editor.programinglive.com/",
  "bugs": {
    "url": "https://github.com/programinglive/zettly-editor/issues"
  },
  "sideEffects": [
    "./dist/index.css"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": {
      "types": "./dist/index.css",
      "default": "./dist/index.css"
    }
  },
  "style": "dist/index.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "example:dev": "vite --config example/vite.config.ts",
    "example:build": "vite build --config example/vite.config.ts",
    "example:preview": "vite preview --config example/vite.config.ts",
    "prepare": "node scripts/prepare.cjs",
    "release": "standard-version",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch"
  },
  "peerDependencies": {
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-toggle": "^1.0.3",
    "@tailwindcss/postcss": "4.1.18",
    "@tiptap/core": "3.16.0",
    "@tiptap/extension-character-count": "3.16.0",
    "@tiptap/extension-code-block-lowlight": "3.16.0",
    "@tiptap/extension-highlight": "3.16.0",
    "@tiptap/extension-link": "3.16.0",
    "@tiptap/extension-placeholder": "3.16.0",
    "@tiptap/pm": "3.16.0",
    "@tiptap/react": "3.16.0",
    "@tiptap/starter-kit": "3.16.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "highlight.js": "11.11.1",
    "lowlight": "3.3.0",
    "lucide-react": "0.562.0",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@programinglive/commiter": "1.2.18",
    "@testing-library/react": "16.3.2",
    "@types/node": "25.0.9",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react": "5.1.2",
    "autoprefixer": "10.4.23",
    "eslint": "9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "3.8.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "standard-version": "^9.5.0",
    "tailwindcss": "4.1.18",
    "tsup": "8.5.1",
    "typescript": "^5.4.3",
    "vite": "7.3.1",
    "vitest": "4.0.17"
  },
